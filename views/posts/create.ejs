<div class="max-w-4xl mx-auto">
    <div class="md:grid md:grid-cols-3 md:gap-6">
        <div class="md:col-span-1">
            <div class="px-4 sm:px-0">
                <h3 class="text-2xl font-bold leading-tight text-gray-900">Create New Post</h3>
                <p class="mt-2 text-sm text-gray-600">
                    Share your thoughts, ideas, and stories with the community.
                </p>

                <div class="mt-6 border-t border-gray-200 pt-6">
                    <h4 class="text-sm font-medium text-gray-900">Writing Guidelines</h4>
                    <ul class="mt-2 text-sm text-gray-600 space-y-1">
                        <li class="flex items-start">
                            <svg class="flex-shrink-0 h-4 w-4 text-green-500 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                            </svg>
                            <span class="ml-2">Title should be 5-100 characters</span>
                        </li>
                        <li class="flex items-start">
                            <svg class="flex-shrink-0 h-4 w-4 text-green-500 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                            </svg>
                            <span class="ml-2">Content should be at least 10 characters</span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="mt-5 md:col-span-2 md:mt-0">
            <form action="/posts" method="POST">
                <div class="shadow sm:overflow-hidden sm:rounded-md">
                    <div class="space-y-6 bg-white px-4 py-5 sm:p-6">
                        <div>
                            <label for="title" class="block text-sm font-medium text-gray-700">
                                Title
                            </label>
                            <div class="mt-1">
                                <input type="text"
                                       name="title"
                                       id="title"
                                       required
                                       minlength="5"
                                       maxlength="100"
                                       class="block w-full rounded-md border-gray-300 shadow-sm focus:border-yellow-500 focus:ring-yellow-500 sm:text-sm"
                                       placeholder="Enter your post title">
                            </div>
                        </div>

                        <div>
                            <label for="content" class="block text-sm font-medium text-gray-700">
                                Content
                            </label>
                            <div class="mt-1">
                                <textarea id="content"
                                          name="content"
                                          rows="8"
                                          required
                                          minlength="10"
                                          class="block w-full rounded-md border-gray-300 shadow-sm focus:border-yellow-500 focus:ring-yellow-500 sm:text-sm"
                                          placeholder="Write your post content here..."></textarea>
                            </div>
                        </div>
                    </div>

                    <div class="bg-gray-50 px-4 py-3 text-right sm:px-6">
                        <div class="flex justify-end gap-3">
                            <a href="/posts"
                               class="inline-flex justify-center rounded-md border border-gray-300 bg-white py-2 px-4 text-sm font-medium text-gray-700 shadow-sm hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-yellow-500 focus:ring-offset-2">
                                Cancel
                            </a>
                            <button type="submit"
                                    class="inline-flex justify-center rounded-md border border-transparent bg-yellow-600 py-2 px-4 text-sm font-medium text-white shadow-sm hover:bg-yellow-700 focus:outline-none focus:ring-2 focus:ring-yellow-500 focus:ring-offset-2">
                                Create
                            </button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
